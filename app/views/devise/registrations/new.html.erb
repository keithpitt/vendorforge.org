<%= form_errors! %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <fieldset>

    <legend>Sign up</legend>

    <div class="clearfix">
      <%= f.label :username %>
      <div class="input">
        <%= f.text_field :username %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password_confirmation, "Confirmation" %>
      <div class="input">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "btn primary" %>
    </div>

  </fieldset>

<% end %>
