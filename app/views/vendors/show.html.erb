<h3 style="float: left"><%= @vendor.name %></h3><h5 style="float: left; padding-left: 5px; position: relative; top: 2px;"><%= @version.number %></h5>
<br style="clear: both" />

<p><%= @vendor.description %></p>

<pre>lib "<%= @vendor.name %>", "~> <%= @version.version %>"</pre>

<p>
  <strong><%= link_to "Download #{@vendor.name} #{@version.number}", vendor_download_path(@vendor, :version => @version.number) %></strong>
  <% if @version.user == current_user %>
    <br /><strong><%= link_to "Delete Version", vendor_path(@vendor), :method => :delete, :confirm => "Are you sure you want to destroy with version?", :class => "delete-version-button" %></strong>
  <% end %>
</p>

<h4>Links</h4>

<% if @vendor.homepage %>
  <p><%= link_to "Homepage", @vendor.homepage %></p>
<% end %>

<h4>Versions</h4>

<ul>
  <% @vendor.versions.sort.reverse.each do |version| %>
    <li>
    <strong><%= link_to version.number, vendor_version_path(:vendor_id => @vendor.to_param, :version => version.number) %></strong> (<%= version.downloads.count %> downloads)
    <br/><em>uploaded by <%= version.user.username %> <%= time_ago_in_words(version.created_at) %> ago</em>
    </li>
  <% end %>
</ul>

<h4>Dependencies</h4>

<ul>
  <% @version.dependencies.each do |dependency| %>
    <li><strong><%= link_to dependency.name, vendor_path(dependency.name.slugerize) %></strong> <%= dependency.number %></li>
  <% end %>
</ul>
